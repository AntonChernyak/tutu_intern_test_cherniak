<resources>
    <!-- Base application theme. -->
    <style name="Theme.Tutu_intern_test_cherniak" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="PokemonToolbarTheme" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:textSize">22sp</item>
        <item name="android:titleTextColor">@color/white</item>
        <item name="android:background">@color/primary_color_green</item>
    </style>

    <style name="ToolbarDividerTheme">
        <item name="android:background">@color/grey_224</item>
    </style>
</resources>